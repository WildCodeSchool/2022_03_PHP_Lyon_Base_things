{# creation of the exit display list page and using boostrap to style the page #}

{% extends 'layout.html.twig' %}

{% block content %}
    <h1 class="text-center m-4" >Liste des exits</h1>
    
    {# creation of a drop-down list to contain the filters #}
    <div class="container">
    <li class="list-group">
          <a class="dropdown-toggle link-dark text-decoration-none" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            Filtres
          </a>
            <ul class="dropdown-menu border rounded center " aria-labelledby="navbarDropdown">
                <form class="d-grid gap-1" method="get">
                    <li>{% include "_departmentList.html.twig" %}</li>
                    <li><hr class="dropdown-divider"></li>
                    <li>{% include "_typeJumpList.html.twig" %}</li>
                    <button type="button" class="btn btn-outline-primary mt-3">Filtrer</button
                </form>
            </ul>
        
        {# display of the list of exits #}
        <ul class="list-group mt-3">
            {% for exit in exits %}
                <li class="list-group-item text-center bg-light m-1 border rounded-pill"><a href="/exits/show?id={{ exit.id }}" class="link-dark text-decoration-none">{{ exit.name}} </a></li>
            {% else %}
                <li>Rien Ã  afficher</li>
            {% endfor %}
        </ul>
        <a href="/exits/add"><button type="button" class="btn btn-outline-primary mt-3">Ajouter un exit</button></a>
    </div>
{% endblock %}