{% extends 'layout.html.twig' %}

{% block content %}

	{% set typeJumpName = "" %}
    {% set exitName = "" %}
    {% set exitDepartment = "" %}
    {% set exitCountry = "" %}
    {% set exitHeight = "" %}
    {% set exitAccessDuration = "" %}
    {% set exitGpsCoordinates = "" %}
    {% set exitComment = "" %}
    {% set exitImage = "" %}
    {% set exitVideo = "" %}
    {% set typeJumpName = "" %}

	{% for item in exit %}

        {% set exitName = item.name %}
        {% set exitDepartment = item.department %}
        {% set exitCountry = item.country %}
        {% set exitHeight = item.height %}
        {% set exitAccessDuration = item.access_duration %}
        {% set exitGpsCoordinates = item.gps_coordinates %}
        {% set exitComment = item.comment %}
        {% set exitImage = item.image %}
        {% set exitVideo = item.video %}
        {% set typeJumpName = typeJumpName ~ ' ' ~ item.type_jump_name ~ ' ! ' %}

	{% endfor %}

	<h1 class="my-3 text-center">{{ exitName }}</h1>

    <div class="container">
    <img class="img-fluid rounded" src="{{ exitImage }}" alt="Photo de l'exit {{ exitName }}">
    </div>

    <div class="my-3 container">

    <p><strong>Lieu :</strong> {{ exitDepartment }}, {{ exitCountry }}.</p>
    <p><strong>Hauteur :</strong> {{ exitHeight }}</p>
    <p><strong>Type :</strong> {{ typeJumpName }}</p>
    <p><strong>Durée d'accès :</strong> {{ exitAccessDuration }}</p>
    <p><strong>Point GPS :</strong> {{ exitGpsCoordinates }}</p>
    <p><strong>Vidéo :</strong> <a href="{{ exitVideo }}" target="_blank">{{ exitVideo }}</a> </p>
    <h2>Remarques</h2>
    <p class"">{{ exitComment }}</p>

    </div>

    <div class="mb-5 pb-5 container">
	<a href="/exits/edit?id={{ exit.id }}">Edit</a>
	<form action="/exits/delete" method="POST">
		<input type="hidden" name="id" value="{{ exit.id }}">
		<button>Delete</button>
	</form>
	<a href="/exits">Back</a>
    </div>
{% endblock %}
