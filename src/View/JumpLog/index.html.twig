{# creation of the exit display list page and using boostrap to style the page #}

{% extends 'layout.html.twig' %}

{% block title %} Carnet de sauts {% endblock %}

{% block content %}
    {# creation of a drop-down list to contain the filters #}
    <main>
        <h1>Liste de sauts</h1>
        {% set i = 0 %}

        {% for jumpLog in jumpLogs %}
            {% set i = i + 1 %}
            <li>{{ i }} {{ jumpLog.id }} {{ jumpLog.date_of_jump }} {{ jumpLog.date_of_jump }} test {{ jumpLog.id_type_jump }}</li>
            
        {% endfor %}
        <pre>
            {{ dump(jumpLogs) }}
        </pre>
    </main>
{% endblock %}